package foo.bar;

import metadata.*;

interface Runnable
{
  void run()
  {
    stdout::println("Runnable::run()");
  }
}

interface DefaultRunnable
{
  void run()
  {
    stdout::println("DefaultRunnable::run(): " + this);
  }
}

abstract class Foo implements Runnable
{
  this()
  {
  }
  abstract void run();
}

class Test extends Foo implements DefaultRunnable
{
  string field;
  this(uint a)
  {
    stderr::println("Test(uint): " + a);
    field = a.toString();
  }

  void alterField()
  {
    field += " (altered)";
  }

  static uint main([]string args)
  {
    stdout::println(987);
    stdout::println();
    // find all of the command line arguments
    string fullargs = concatMap(addSpace, args);
    stdout::println("Your " + args.length + " arguments were:" + fullargs);

    {string -> string} instance = addSpace;
    stdout::println("test: " + (instance instanceof {string #-> string}));

    ?object o = new Test(9);
    stdout::println("o instanceof Foo: " + (o instanceof Foo) + ", o instanceof Test: " + (o instanceof Test));
    Runnable r = cast<Runnable> o;
    stdout::println("Interface call: " + r);

    Foo foo = cast<Foo> o;
    Test test = cast<Test> foo;
    Runnable runTest = foo;
    runTest.run();

    // needs to throw a cast exception:
    {#-> void} immutableAlter = cast<{#-> void}> cast<object> test.alterField;
    immutableAlter();
    stdout::println("Field: " + test.field);

    MetadataTest metadataTest = new MetadataTest();
    metadataTest.someMethod();
    stdout::println("metadataTest: " + metadataTest);
    TestInterface testInterface = metadataTest;
    stdout::println("interface: " + testInterface);

    stdout::println("Foo: " + foo);

    stdout::println("object: " + new object());
    stdout::println("bigint: " + bigint());
    stdout::println("null: " + null);

    return 0;
  }

  static string concatMap({string #-> string} f, []string input)
  {
    string result = string();
    for (uint i = 0; i < input.length; ++i)
    {
      result += f(input[i]);
    }
    return result;
  }

  static immutable string addSpace(string x)
  {
    return " " + x;
  }
}
